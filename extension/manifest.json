{
  "manifest_version": 3,
  "name": "PhishGuard Lite",
  "version": "0.1.0",
  "description": "Inline phishing risk labels for Gmail/Outlook/LinkedIn. Local heuristics by default; optional backend enrichment.",
  "action": {
    "default_title": "PhishGuard Lite"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://www.linkedin.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": [
        "src/content.ts"
      ],
      "run_at": "document_idle"
    }
  ]
}